---
//Desestructuramos data
const {data: {id, title, slug, subtitle, description, content, image, url, github}, } = Astro.props
---

<li class="rounded-2xl overflow-hidden shadow-sm shadow-sky-500 flex flex-col transition-shadow hover-shadow-md hover:shadow-sky-900">
    <a href=`/technologies/${slug}`>
        <img 
            src={image}
            width="640"
            height="360"
            loading="lazy"
            class="w-full h-48 object-cover"
            alt={title}
            transition:name={`technology-image-${id}`}
            >
    </a>
    <article class="h-full p-3 bg-zinc-800 flex flex-col gap2">
        <h2 class="text-lg font-bold" transition:name={`technology-title-${id}`}>{title}</h2>
        <h3 class="text-zinc-400 font-semibold" transition:name={`technology-subtitle-${id}`}>{subtitle}</h3>
        <p class="text-sm" transition:name={`technology-description-${id}`}>{description}</p>
        <a href=`/technologies/${slug}` class="px-2 py-0 5 mt-auto border-2 rounded-lg border-sky-500 bg-sky-500 font-semibold text-center transition-all hover:brightness-125">
            Aprender
        </a>
    </article>
</li>